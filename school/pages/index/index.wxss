.swiper{
	width: 100%;
	height:206rpx;
}
.watch{
	width: 100%;
	height: 212rpx;
	background-color: #fff;
	margin-top:10px;
	display: flex;
	border-top:1px dashed #ccc;
	border-bottom:1px solid #ccc;
}
.watch .watch-1{
	flex:1;
	display: flex;
	border-right:1px solid #ccc;
}
.watch .watch-1 .watch-2{
	flex:1;
	height: 212rpx;
} 
.watch .watch-1 .watch-2 image{
	width: 100%;
	height:100%;
} 
.watch .watch-1 .watch-22{
	flex:1;
	height: 212rpx;
	display: flex;
	flex-direction: column;
} 
.watch .watch-1 .watch-22 .watch-22-1{
	flex:1;
	height: 100rpx;
	display: flex;
	text-align: center;
} 
.watch .watch-1 .watch-22 .watch-22-1 .watch-22-2{
	flex:1;
	height: 100rpx;
	color: #dc7b75;
	line-height:100rpx;
	font-size: 12px;
} 
.watch .watch-1 .watch-22 .watch-22-1 .watch-22-2 image{
	width:56rpx;
	height:56rpx;
	vertical-align: middle;
}.watch .watch-1 .watch-22 .watch-22-1 .watch-22-2 view{
	width:100%;
	height:100%;
}


.iconButton{
	width: 100%;
	height: 134rpx;
	background-color: #fff;
	display: flex;
	flex-wrap: wrap;
	font-size: 23rpx;
	margin-top:20rpx;

}
.iconButton view{
	height: 134rpx;
	flex:1;
	text-align: center;
	color:#8f8f8f;
}
.iconButton view image{
	width: 100rpx;
	height: 100rpx;
	
}