page{
	width: 100%;
	height: 100%;
}
.box{
	width: 100%;
	height: 100%;
	background-color: #fff;
}
.left{
	width: 24rpx;
	
}
.left image{
	width: 84rpx;
	height: 84rpx;
	margin-left:24rpx;
	margin-top:32rpx;
	float: left;
}
.right{
	width: 624rpx;
	height: auto;
	float: right;
}
.right .name{
	width: 100%;
	height: 54rpx; 
	margin-top:30rpx;
	line-height: 54rpx;
	color: #2084b3;
}
.right .word{
	width: 100%;
	height: auto; 
	padding-right:50rpx;
	line-height: 44rpx;
	font-size: 34rpx;
	color: #333;
}
.right .picture{
	width: 100%;
	height: auto; 
	padding-right:50rpx;
	display: flex;
	flex-wrap: wrap;
	flex-direction: row;
}
.right .picture image{
	width: 184rpx;
	height: 204rpx; 
	margin-right:20rpx;
}
.right .button{
	width: 100%;
	height: 80rpx;
}
.right .button image{
	width: 38rpx;
	height: 29rpx;
	float: right;
	margin-right: 30rpx;
	margin-top: 20rpx;
	vertical-align: middle;
}
.right .button text{
	float: left;
	color: #b8dede;
	font-size: 24rpx;
	margin-top:30rpx;
}
.right .button .double{
	width: 364rpx;
	height: 80rpx;
	margin-left: 180rpx;
	background-color: #666666;
	color: #fff;
	border:1pz solid #666;
	border-radius: 20rpx;
}
.right .button .double .zan{
	width: 49%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	color:#fff;
	float: left;
	border-right:1px solid #515151;
}
.right .button .double .zan image{
	width: 33rpx;
	height: 30rpx;
	vertical-align: middle;
	float: none;
	margin-top:0rpx;
	margin-right:20rpx;
}
.right .button .double .pinglun{
	width: 50%;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	color:#fff;
	float: right;
}
.right .button .double .pinglun image{
	width: 33rpx;
	height: 30rpx;
	vertical-align: middle;
	float: none;
	margin-top:0rpx;
	margin-right:20rpx;
}
.right .detail{
	width: 95%;
	height: auto;
	background-color: #f3f3f5;

}
.right .detail .isZan,.isPinglun{
	width: 100%;
	height: auto;
	background-color: #f3f3f5;
}
.right .detail .isZan{
	color: #2184b2;
	font-size: 26rpx;
	line-height:40rpx; 
	border-bottom:1px solid #e7e7e8;
}
.right .detail .isZan image{
	vertical-align: middle;
	margin-left:22rpx;
	width: 22rpx;
	height: 22rpx;
}
.right .detail .isZan text{
	margin-left: 10rpx;
	margin-top:3rpx;
}
.right .detail .isPinglun .pinglunDetail{
	width: auto;
	height: auto;
	margin-top:10rpx;
	padding-left:22rpx;
	padding-right:22rpx;
	line-height:40rpx; 
	font-size: 30rpx;
}
.right .detail .isPinglun .pinglunDetail text{
	color:#2184b2;
}

.pinglunbox{
	width: 100%;
	height: auto;
	background-color: #eee;
	position: fixed;
	bottom:0px;
}

.wordDetail{
	color: #000;
	margin: 0 auto;
	background-color: #eee;
	
}
.add{
	position: fixed;
	bottom: 0rpx;
}
