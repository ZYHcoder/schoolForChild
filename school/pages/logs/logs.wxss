}

.fromLog{
	display: block;
	width: 556rpx;
	height: 574rpx;
	margin: 0 auto;
	margin-top:80rpx;
	background-color: #a8e8f4;
	border:1rpx solid #a8e8f4;
	border-radius: 30rpx;
}
.fromLog .inputView{
	width:490rpx;
	height: 95rpx;
	background-color: #fff;
	margin:0 auto;
	margin-top:25rpx; 
	border:1rpx solid #eee;
	border-radius: 30rpx;
}
.fromLog .inputView image{
	float:left;
	width: 48rpx;
	height:95rpx;
	margin-left:28rpx;
	vertical-align: middle;
}
.fromLog input{
	padding-left:25rpx;
	width: 350rpx;
	height:95rpx;

}
.fromLog picker{
	padding-left:25rpx;
	width: 350rpx;
	height:95rpx;
	line-height: 95rpx;
	margin-left:70rpx;
}
.loginButton{
	width: 135rpx;
	height:130rpx;
	margin-top:15rpx;
	margin-left:208rpx;
	padding:0;
	position: static;
}
.loginButton image{
	width: 135rpx;
	height:130rpx;
	
}
button::after{
	width: 0rpx;
	height:0rpx;
}
.bottom{
