page{
	background-color: #edeef0;
}
.top{
	width: 100%;
	height: 24rpx;
	background-color: #edeef0;
}
.topIcon{
	width: 100%;
	height: 215rpx;
	display: flex;
	border-top: 1px solid #ccc;
	font-size: 24rpx;
	color: #b0b0b0;
	background-color: #fff;
}
.iconList{
	flex:1;
	text-align: center;
	height: 215rpx;
	position: relative;
}
.iconList image{
	width: 136rpx;
	height: 136rpx;
	margin-top: 38rpx;

}
.iconList span{
	width: 34rpx;
	height: 34rpx;
	background-color: red;
	border:1px solid red;
	border-radius: 50%;
	display: inline-block;
	position: absolute;
	top:15rpx;
	right:15rpx;
	color:#fff;
	text-align: center;
	line-height: 34rpx;
}

.topButton{
	width: 100%;
	height:186rpx; 
	background-color: #fff;
	overflow: hidden;
}
.button{
	width: 704rpx;
	height: 92rpx;
	margin: 0 auto;
	margin-top:46rpx;
	background-color: #ffa200;
	border:1px solid #ffa200;
	border-radius: 20rpx;
	color: #fff;
}
.button image{
	width: 50rpx;
	height: 68rpx;
	margin-left:208rpx;
	vertical-align: middle;
	margin-top:3rpx;
}
.button view{
	display: inline-block;
}
.button .imWork{
	height: 92rpx;
	line-height: 92rpx;
	font-size: 35rpx;
	margin-left: 50rpx;
}
.button .notRead{
	height: 92rpx;
	line-height: 92rpx;
	font-size: 25rpx;

	margin-left: 100rpx;
	text-decoration: underline;
}


.detailList{
	width: 100%;
	height: auto;
	margin-top:30rpx;
}
.detail{
	width: 100%;
	height: 195rpx;
	background-color: #fff;
	margin-bottom: 30rpx;
}
.detailName{
	width: 100%;
	height: 55rpx;
	padding-top:20rpx;
}
.detailName image{
	width: 42rpx;
	height:42rpx;
	margin-left: 32rpx;
}
.detailName text{
	margin-left: 20rpx;
}

.detailBody{
	width: 100%;
	height: 65rpx;
	line-height: 65rpx;
	text-indent: 30rpx;
}
.detailBottom{
	width: 100%;
	height: 48rpx;
	font-size: 26rpx;
	color: #c7cbcc;
	text-indent: 537rpx;
}